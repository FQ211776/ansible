{
    "name": "Arch Linux Development Environment by Roberto Flores",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "remoteUser": "dev",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-vscode.ansible"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "upgradePackages": true
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "postCreateCommand": "echo 'Arch Linux devcontainer is ready!'"
}
